<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notifications permission: unknown"
            android:padding="8dp" />

        <Button
            android:id="@+id/btnRequestNotif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request Notifications Permission" />

        <Button
            android:id="@+id/btnOpenNotifSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Notification Settings"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnOpenBatterySettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Battery Optimization Settings"
            android:layout_marginTop="8dp" />

        <View
            android:id="@+id/progressWater"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginTop="12dp"
            android:background="#CCC" />

        <TextView
            android:id="@+id/iperlStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IPERL: unknown"
            android:paddingTop="8dp" />

        <Button
            android:id="@+id/btnRefreshIperl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Refresh IPERL repository"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnStartTestAlarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trigger Test Alarm"
            android:layout_marginTop="16dp"
            android:textColor="#FFFFFF"
            android:background="#D32F2F" />

    </LinearLayout>

</ScrollView>
